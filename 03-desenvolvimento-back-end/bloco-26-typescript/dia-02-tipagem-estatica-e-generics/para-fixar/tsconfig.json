{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["es2016", "DOM"],                                        
    "module": "commonjs",                                
    "rootDir": "./",                                                                
    "outDir": "./dist",                                           
    "esModuleInterop": true,                                           
    "forceConsistentCasingInFileNames": true,       
    "strict": true,                                               
    "skipLibCheck": true                            
  },
  "include":["src/**/*"],
  "exclude": ["./node_modules"]
}                                                   