use('cinema')

//Exerc√≠cio 1: Adicione a categoria "superhero" ao filme Batman.

db.movies.updateOne(
  { title: "Batman" },
  {
    $push: {
      category: "superhero",
    }
  }
)

// Exerc√≠cio 2: Utilizando o modificador $each, adicione as categorias "villain" e "comic-based" ao filme Batman.
use('cinema')
db.movies.findOneAndUpdate(
  { title: "Batman" },
  {
    $push: {
      category: {
        $each: ["villain", "comic-based"]
      }
    }
  }
)

